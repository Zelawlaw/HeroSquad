{{#partial "content"}}
    {{#if errorMessage}}
        <div class="error-message">{{errorMessage}}</div>
    {{/if}}

    <div class="container">
        <div class="row">
            <h2>Available Heroes</h2>
            <ol class="display-list">
                {{#each heroes}}
                    <li>
                        <a href="/heroes/{{id}}"> {{name}}  -  {{age}} Years Old </a>
                    </li>
                {{/each}}
            </ol>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}