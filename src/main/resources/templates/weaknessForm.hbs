{{#partial "content"}}
    {{#if editWeakness}}
        <h1>Edit Description for {{editWeakness.name}}</h1>
        <form action="/weaknesses/{{editWeakness.id}}/update" method="post">
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" name="description" type="text" value="{{editWeakness.description}}" class="form-control" style="width: 50%;">
            </div>
    {{else}}
            <h1>Add a new Weakness!</h1>
        <form action="/weaknesses/new" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" name="name" type="text" class="form-control" style="width: 50%;">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" name="description" type="text" class="form-control" style="width: 50%;">
            </div>
    {{/if}}

        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}
